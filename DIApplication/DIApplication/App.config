<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="unity" type="Microsoft.Practices.Unity.Configuration.UnityConfigurationSection, Microsoft.Practices.Unity.Configuration"/>
  </configSections>
  <unity xmlns="http://schemas.microsoft.com/practices/2010/unity">
    <sectionExtension type="Microsoft.Practices.Unity.InterceptionExtension.Configuration.InterceptionConfigurationExtension, Microsoft.Practices.Unity.Interception.Configuration" />
    <assembly name="DIApplication" />
    <namespace name="DIApplication" />
    <namespace name="DIApplication.Interfaces" />
    <namespace name="DIApplication.InterceptionBehaviors" />
    <namespace name="DIApplication.Implementation" />
    <container>
      <extension type="Interception" />
      <register type="IObjectType" mapTo="ObjectType">
        <constructor>
          <param name="name" />
          <param name="code" />
          <param name="description" />
        </constructor>
        <interceptor type="InterfaceInterceptor" />
        <interceptionBehavior type="LoggingInterceptionBehavior" />
        <interceptionBehavior type="CachingInterceptionBehavior" />
      </register>
    </container>
  </unity>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
</configuration>
